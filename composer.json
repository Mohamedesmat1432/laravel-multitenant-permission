{
    "name": "esmat/laravel-multitenant-permission",
    "description": "Multi-tenancy and role-based permissions for Laravel 12",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your@email.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Esmat\\MultiTenantPermission\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esmat\\MultiTenantPermission\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esmat\\MultiTenantPermission\\Providers\\MultiTenantPermissionServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
